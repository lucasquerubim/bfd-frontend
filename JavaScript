1. Variáveis e tipos

let texto = "Aprendendo Lógica"; 
const numero = 42;               

console.log(typeof texto);  
console.log(typeof numero); 

2. Entrada e decisão simples

function verificarNumero(n) {
    if (n > 0) {
        return "Positivo";
    } else if (n < 0) {
        return "Negativo";
    } else {
        return "Zero";
    }
}


3. Par ou ímpar

function parOuImpar(n) {
    if (n % 2 === 0) {
        return "Par";
    } else {
        return "Ímpar";
    }
}

4. Laço for básico

for (let i = 1; i <= 10; i++) {
    console.log(i);
}

5. Soma com for

function somarAte(n) {
    let soma = 0; // Acumulador
    for (let i = 1; i <= n; i++) {
        soma = soma + i; 
    }
    return soma;
}

6. Laço while

let i = 10;
while (i >= 1) {
    console.log(i);
    i--; 
}

7. Tabuada

function tabuada(n) {
    for (let i = 1; i <= 10; i++) {
        console.log(`${n} x ${i} = ${n * i}`);
    }
}

8. Decisão com switch

function verificarDia(dia) {
    switch (dia) {
        case "sábado":
        case "domingo":
            return "Fim de semana";
        default:
            return "Dia útil";
    }
}

9. Função com múltiplos parâmetro

function formatarFrase(nome, idade, cidade) {
    return `Meu nome é ${nome}, tenho ${idade} anos e moro em ${cidade}.`;
}

10. Combinação de estruturas (Array + Loop + If)
function filtrarPares(numeros) {
    let pares = []; // Array vazio para guardar os resultados
    for (let i = 0; i < numeros.length; i++) {
        if (numeros[i] % 2 === 0) {
            pares.push(numeros[i]); // Adiciona na lista de pares
        }
    }
    return pares;
}

